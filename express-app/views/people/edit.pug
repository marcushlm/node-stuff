extends ../layout

block content
	h1.
		Person ID #{person._id}
	form(action='/people/'+ person._id +'/edit',method='post',name='updatePerson',enctype='application/x-www-form-urlencoded')
		p Name:
			input#inputName(type='text', value=person.name, name='name')
		p Age:
			input#inputAge(type='number', value=person.age, name='age')
		p DOB:
			input#inputDob(type='date', value=personDob, name='dob')
		p Are you Loved?
			input#inputIsLoved(type='checkbox', name='isloved', checked=person.isloved === true ? "checked" : undefined)
		p
			input(type='hidden',value='PUT',name='_method')
		p
			button#btnSubmit(type='submit').
				Update
